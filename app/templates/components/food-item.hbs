
<div class="food-item {{ if food.available '' 'not-available'}}">
  <div {{action 'toggleOpen'}} class='title-bar'> {{food.name}}! <span class="pull-right">{{if isOpen 'V' '>'}}</span> </div>
  {{#if isOpen }}
 <img src={{food.imageUrl}} class="img-icon pull-left" />
    <div class="description"> {{food.description}} </div>
    <div>
      {{#link-to 'foods.food' food.id}}<button>Show Page</button>{{/link-to}}
      {{#link-to 'foods.food.edit' food.id}}<button>Edit Page</button>{{/link-to}}
        <button {{action 'toggleAvailable' food}}>
          {{if food.available 'Make Unavailable' 'Make Available'}}</button>
    </div>
  {{/if}}
</div>
